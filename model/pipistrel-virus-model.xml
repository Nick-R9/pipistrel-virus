<?xml version="1.0"?>

<PropertyList>

  <path>pipistrel-virus.ac</path>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>10000</max-m>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>prop slow</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor>-1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <!-- Make the fuel selector valve move based on the value of switch-position 
       The actual change in tank selection is done by pa28.nas which allows
       cycling the selected tank by keyboard "f".-->
  <animation>
    <type>rotate</type>
    <object-name>FuelValvePointer</object-name>
    <offset-deg>-180</offset-deg>
    <factor>-90</factor>
    <property>controls/fuel/switch-position</property>  
    <center>
      <x-m>1.94707</x-m>
      <y-m>-0.55448</y-m>
      <z-m>-0.21952</z-m>
    </center>
    <axis>
      <x>0.00042</x>
      <y>0.01261</y>
      <z>0.0018</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ParkingBrakeControl</object-name>
    <factor>35</factor>
    <property>controls/gear/brake-parking</property>  
    <center>
      <x-m>1.891</x-m>
      <y-m>-0.0</y-m>
      <z-m>-0.0616</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Beacon</object-name>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>sim/model/lights/beacon/state</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>LeftNavLight</object-name>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>controls/lighting/nav-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RightNavLight</object-name>
    <emission>
      <red>0.0</red>
      <green>1.0</green>
      <blue>0.0</blue>
      <factor-prop>controls/lighting/nav-lights</factor-prop>
    </emission>
  </animation>

  <!--pick animation for the door--> 
  <animation>
    <type>pick</type>
    <object-name>DoorLatch</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>pa28.rightDoor.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>DoorLatchExt</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>pa28.rightDoor.toggle();</script>
      </binding>
    </action>
  </animation>

  <!--door animation--> 
  <animation> 
    <type>rotate</type>
    <object-name>DoorGroup</object-name>
    <property>sim/model/door-positions/rightDoor/position-norm</property>
    <interpolation>
      <entry>
        <ind>0.0</ind>
        <dep>0.0</dep>
      </entry>
      <entry>
        <ind>0.5</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>1</ind>
        <dep>70.0</dep>
      </entry>
    </interpolation>

    <center>
      <x-m>2.00932</x-m>
      <y-m>0.60223</y-m>
      <z-m>-0.02615</z-m>
    </center>

    <axis>
      <x1-m>2.00903</x1-m>
      <y1-m>0.60171</y1-m>
      <z1-m>-0.02434</z1-m>
      <x2-m>2.00314</x2-m>
      <y2-m>0.56534</y2-m>
      <z2-m>0.21937</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>DoorLatch</object-name>
    <property>/sim/model/door-positions/rightDoor/position-norm</property>
    <interpolation>
      <entry>
        <ind>0.0</ind>
        <dep>0.0</dep>
      </entry>
      <entry>
        <ind>0.5</ind>
        <dep>60.0</dep>
      </entry>
      <entry>
        <ind>1</ind>
        <dep>60.0</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>2.24482</x-m>
      <y-m>0.5798</y-m>
      <z-m>0.06912</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.1</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Throttle</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor>47</factor>
    <center>
      <x-m>1.937</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.02758</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Mixture</object-name>
    <property>controls/engines/engine[0]/mixture</property>
    <factor>47</factor>
    <center>
      <x-m>1.937</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.02758</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CarbHeatKnob</object-name>
    <object-name>CH-Lever</object-name>
    <property>controls/anti-ice/engine/carb-heat[0]</property>
    <factor>80</factor>
    <offset-deg>-40</offset-deg>
    <center>
      <x-m>1.9055</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.01017</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LeftAileron</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>20</factor>
    <center>
      <x-m>3.1338</x-m>
      <y-m>-5.0553</y-m>
      <z-m>0.0468</z-m>
    </center>
    <axis>
      <x>0.0814</x>
      <y>1.0</y>
      <z>-0.1290</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RightAileron</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>20</factor>
    <center>
      <x-m>3.1338</x-m>
      <y-m>5.0553</y-m>
      <z-m>0.0468</z-m>
    </center>
    <axis>
      <x>-0.0814</x>
      <y>1.0</y>
      <z>0.1290</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LeftFlap</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-45</factor>
    <center>
      <x-m>3.30</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.42</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>-1.0</y>
      <z>0.1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RightFlap</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>45</factor>
    <center>
      <x-m>3.30</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.42</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Stabilator</object-name>
    <object-name>AntiServoTab</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>15</factor>
    <center>
      <x-m>6.5</x-m>
      <y-m>0.0</y-m>
      <z-m>0.15</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AntiServoTab</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>30</factor>
    <center>
      <x-m>6.79</x-m>
      <y-m>0.0</y-m>
      <z-m>0.17</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AntiServoTab</object-name>
    <property>controls/flight/elevator-trim</property>
    <factor>-30</factor>
    <center>
      <x-m>6.79</x-m>
      <y-m>0.0</y-m>
      <z-m>0.17</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>NoseWheel</object-name>
    <object-name>NoseOleo</object-name>
    <object-name>NoseOleoMount</object-name>
    <object-name>UpperLink</object-name>
    <object-name>LowerLink</object-name>
    <object-name>NoseStrutLinkMount</object-name>
    <object-name>NoseFork</object-name>
    <object-name>NoseWheelFairing</object-name>
    <object-name>NoseWheelStrut</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>-17.5</factor>
    <center>
      <x-m>1.07906</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.-0.61773</z-m>
    </center>
    <axis>
      <x>-0.100868</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>NoseWheel</object-name>
    <object-name>NoseWheelStrut</object-name>
    <object-name>LowerLink</object-name>
    <object-name>NoseStrutLinkMount</object-name>
    <object-name>NoseFork</object-name>
    <object-name>NoseWheelFairing</object-name>
    <property>gear/gear[0]/compression-m</property>
    <factor>1.0</factor>
    <axis>
      <x>-0.100868</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>UpperLink</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <center>
      <x-m>1.11548</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.61490</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
    <interpolation include="NoseGearScissorInterpolation.xml"/>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LowerLink</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <center>
      <x-m>1.10549</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.71349</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <interpolation include="NoseGearScissorInterpolation.xml"/>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>LeftWheel</object-name>
    <object-name>LeftMainFairing</object-name>
    <property>gear/gear[1]/compression-m</property>
    <factor>1.0</factor>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>RightWheel</object-name>
    <object-name>RightMainFairing</object-name>
    <property>gear/gear[2]/compression-m</property>
    <factor>1.0</factor>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <name>NoseTrim</name>
    <type>rotate</type>
    <object-name>RudderTrim</object-name>
    <property>controls/flight/rudder-trim[0]</property>
    <factor>1080</factor>
    <center>
      <x-m>1.88419</x-m>
      <y-m>0.07692</y-m>
      <z-m>-0.29866</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>RudderTrimIndicator</object-name>
    <property>controls/flight/rudder-trim[0]</property>
    <factor>0.03</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>  
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Rudder</object-name>
    <object-name>TailNavLight</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>17.5</factor>
    <center>
      <x-m>6.36</x-m>
      <y-m>0.0</y-m>
      <z-m>-.16</z-m>
    </center>
    <axis>
      <x>0.25</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <type>material</type>
    <object-name>TailNavLight</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
      <factor-prop>controls/lighting/nav-lights</factor-prop>
    </emission>
  </animation>

</PropertyList>
